<Window x:Class="LicenseCheckWin.WinRegisiter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LicenseCheckWin"
        mc:Ignorable="d"
        Title="注册" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="103*"/>
            <ColumnDefinition Width="497*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnRegisiter" Content="注册" HorizontalAlignment="Left" Margin="135,0,0,0" VerticalAlignment="Center" Height="40" Width="98" Grid.Row="5" Grid.Column="1" Click="btnRegisiter_Click"/>
        <Label Content="序列号" HorizontalAlignment="Left" Margin="26,0,0,0" VerticalAlignment="Center" Grid.Row="1" Width="72"/>
        <Label Content="软件编号" HorizontalAlignment="Left" Margin="22,0,0,0" VerticalAlignment="Center" Grid.Row="2" Width="76"/>
        <Label Content="注册码" HorizontalAlignment="Left" Margin="22,0,0,0" VerticalAlignment="Center" Grid.Row="3" Width="76"/>
        <Label x:Name="labSoftcode" Grid.Column="1" Content="Label" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="469"/>
        <TextBox x:Name="txtRegisitor" Grid.Column="1" HorizontalAlignment="Left" Margin="10,12,0,0" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="469" Height="203" Grid.RowSpan="2"/>
        <TextBox x:Name="txtSerialCode" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="469" Height="26" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" IsReadOnly="True"/>

    </Grid>
</Window>
