<Application
    x:Class="LicenseCreate.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LicenseCreate"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Global Application Styles -->
            <Style TargetType="Window">
                <Setter Property="FontFamily" Value="Microsoft YaHei UI"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>
            
            <Style TargetType="GroupBox">
                <Setter Property="BorderBrush" Value="#FFDDDDDD"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Foreground" Value="#FF333333"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="GroupBox">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Grid.RowSpan="2" Background="White" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="5"/>
                                <Border Grid.Row="0" Background="#FFF8F9FA" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="1,1,1,0" 
                                        CornerRadius="5,5,0,0" 
                                        Padding="10,8">
                                    <ContentPresenter Grid.Row="0" ContentSource="Header" 
                                                      TextBlock.FontWeight="SemiBold"
                                                      TextBlock.Foreground="#FF2C3E50"/>
                                </Border>
                                <ContentPresenter Grid.Row="1" Margin="{TemplateBinding Padding}"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <Style TargetType="Label">
                <Setter Property="Foreground" Value="#FF333333"/>
                <Setter Property="FontWeight" Value="Medium"/>
            </Style>
            
            <Style TargetType="TextBox">
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
                <Setter Property="Padding" Value="8"/>
                <Style.Triggers>
                    <Trigger Property="IsFocused" Value="True">
                        <Setter Property="BorderBrush" Value="#FF007ACC"/>
                        <Setter Property="BorderThickness" Value="2"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <Style TargetType="DatePicker">
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
                <Style.Triggers>
                    <Trigger Property="IsFocused" Value="True">
                        <Setter Property="BorderBrush" Value="#FF007ACC"/>
                        <Setter Property="BorderThickness" Value="2"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <Style TargetType="CheckBox">
                <Setter Property="Foreground" Value="#FF333333"/>
                <Setter Property="FontWeight" Value="Medium"/>
            </Style>
            
            <ResourceDictionary.MergedDictionaries />
        </ResourceDictionary>
    </Application.Resources>
</Application>
