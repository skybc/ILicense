<Window
    x:Class="LicenseCreate.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:addon="http://schemas.landmarkdevs.com/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LicenseCreate"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1300"
    Height="800"
    FontSize="18"
    Icon="密钥管理系统 [48x48].ico"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="119*" />
            <ColumnDefinition Width="81*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="200" />
            <RowDefinition Height="249*" />
        </Grid.RowDefinitions>
        <Button
            x:Name="bCreateKey"
            Grid.Column="1"
            Width="176"
            Height="50"
            Margin="47,39,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            Click="BCreateKey_Click"
            Content="生成密钥对"
            FontSize="24" />
        <Label
            x:Name="label"
            Width="93"
            Height="33"
            Margin="10,18,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="授权密钥"
            d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" />
        <TextBox
            x:Name="rtpublickey"
            Margin="140,18,112,37"
            VerticalContentAlignment="Top"
            Background="White"
            BorderBrush="#FFABADB3"
            BorderThickness="1"
            TextWrapping="Wrap" />
        <Label
            x:Name="label_Copy"
            Grid.Row="1"
            Width="108"
            Height="56"
            Margin="10,31,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="私钥密钥2"
            d:LayoutOverrides="LeftMargin, RightMargin" />
        <TextBox
            x:Name="rtprivatekey"
            Grid.Row="1"
            Margin="140,10,112,10"
            VerticalContentAlignment="Top"
            Background="White"
            BorderThickness="1"
            TextWrapping="Wrap" />
        <Label
            x:Name="label1"
            Grid.Row="2"
            Margin="65,21,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="注册码" />
        <TextBox
            x:Name="txtRigisterCode"
            Grid.Row="2"
            Height="34"
            Margin="140,23,112,0"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            Background="White"
            BorderThickness="1" />
        <Label
            x:Name="label2"
            Grid.Row="2"
            Height="30"
            Margin="47,98,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="被授权人" />
        <TextBox
            x:Name="txtUser"
            Grid.Row="2"
            Height="34"
            Margin="140,92,113,0"
            VerticalAlignment="Top"
            Background="White"
            BorderThickness="1"
            Text=""
            TextWrapping="Wrap" />
        <Label
            x:Name="label3"
            Grid.Row="2"
            Margin="83,147,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="期限" />
        <DatePicker
            x:Name="dp"
            Grid.Row="2"
            Width="208"
            Height="50"
            Margin="140,136,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            Background="White"
            BorderThickness="1" />
        <Label
            x:Name="label4"
            Grid.Row="2"
            Margin="49,0,0,150"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="软件代号"
            RenderTransformOrigin="0.482,0.53" />
        <TextBox
            x:Name="txtsoftcode"
            Grid.Row="2"
            Height="34"
            Margin="139,0,114,150"
            VerticalAlignment="Bottom"
            Background="White"
            BorderThickness="1"
            Text=""
            TextWrapping="Wrap" />
        <Button
            x:Name="bCreate"
            Grid.Row="2"
            Grid.Column="1"
            Height="49"
            Margin="169,67,223,0"
            VerticalAlignment="Top"
            Click="BCreate_Click"
            Content="密钥生成"
            FontSize="24" />
        <TextBox
            x:Name="txtLicense"
            Grid.Row="2"
            Grid.Column="1"
            Margin="47,121,30,16"
            Background="White"
            BorderThickness="1"
            TextWrapping="Wrap" />
        <Label
            x:Name="label5"
            Grid.Row="2"
            Grid.Column="1"
            Margin="47,90,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="密钥" />
        <Button
            x:Name="bLocalRigisterCode"
            Grid.Row="2"
            Width="152"
            Height="49"
            Margin="0,13,-64,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="BLocalRigisterCode_Click"
            Content="本机注册码"
            FontSize="24"
            RenderTransformOrigin="0.5,0.5" />
        <Button
            x:Name="bCheck"
            Grid.Row="2"
            Grid.Column="1"
            Width="141"
            Height="49"
            Margin="0,67,30,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            Click="BCheck_Click"
            Content="密钥检验" />
        <Label
            x:Name="label6"
            Grid.Row="2"
            Margin="140,62,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="注册码必须要填写，没有填写就是任意用户都可以使用"
            Foreground="#DDFF0000" />
        <CheckBox
            x:Name="cbyj"
            Grid.Row="2"
            Margin="366,154,339,0"
            VerticalAlignment="Top"
            Checked="Cbyj_Checked"
            Content="永久"
            Unchecked="Cbyj_Unchecked" />
        <Label
            x:Name="label7"
            Grid.Row="1"
            Grid.Column="1"
            Margin="338,150,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="版本：3.0.0.0"
            FontSize="24" />
        <Label
            x:Name="label4_Copy"
            Grid.Row="2"
            Margin="35,0,0,107"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="自定义数据"
            RenderTransformOrigin="0.482,0.53" />
        <TextBox
            x:Name="txt_data"
            Grid.Row="2"
            Margin="140,245,112,31"
            VerticalContentAlignment="Top"
            Background="White"
            BorderThickness="1"
            TextWrapping="Wrap" />
    </Grid>
</Window>
